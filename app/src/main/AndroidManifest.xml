<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.github.tifezh.kchart">

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.MainActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:launchMode="standard"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.KlineActivity"
            android:configChanges="keyboardHidden|orientation|screenSize" />

        <activity
            android:name=".activity.TimeMainActivity"
            android:configChanges="keyboardHidden|orientation|screenSize" />

        <activity android:name=".activity.ScaleActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"/>

        <activity android:name=".activity.LmeActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:launchMode="standard"
            android:screenOrientation="portrait"/>

        <activity android:name=".activity.GroupActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:launchMode="standard"
            android:screenOrientation="portrait"/>

        <activity android:name=".activity.GroupMinuteActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"/>
    </application>

</manifest>