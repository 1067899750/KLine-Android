<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:autofit="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical">

    <com.github.tifezh.kchartlib.view.MeiTextPathView
        android:layout_width="match_parent"
        android:layout_height="@dimen/d50"
        android:layout_marginTop="@dimen/d10"
        app:duration="12000"
        app:text="欢迎来到 MEI_S"
        app:textColor="#999999"
        app:cycle="true"/>

    <com.github.tifezh.kchart.view.TimerTextView
        android:id="@+id/timer_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/d100"
        android:layout_marginRight="@dimen/d100"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d10"
        android:scrollbars="none"
        android:paddingLeft="50dp"
        android:paddingRight="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_loadmore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:onClick="onClick"
                android:text="k线图" />

            <Button
                android:id="@+id/btn_minute"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:onClick="onClick"
                android:text="分时图" />

            <Button
                android:id="@+id/btn_tate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:onClick="onClick"
                android:text="利率" />

            <Button
                android:id="@+id/btn_minute2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:onClick="onClick"
                android:text="月间价差图" />

            <Button
                android:id="@+id/btn_group_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:onClick="onClick"
                android:text="GroupView"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_group_minute_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:onClick="onClick"
                android:text="柱状图"
                android:textAllCaps="false"
                android:visibility="visible"/>

            <Button
                android:id="@+id/btn_football"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:onClick="onClick"
                android:text="168体育" />

            <Button
                android:id="@+id/btn_shade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:onClick="onClick"
                android:text="下部阴影" />

            <Button
                android:id="@+id/btn_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:onClick="onClick"
                android:text="明细图表" />


            <Button
                android:id="@+id/btn_line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:onClick="onClick"
                android:text="指示线点击和滑动区分" />


            <Button
                android:id="@+id/btn_suspend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:onClick="onClick"
                android:text="饼图1" />

            <Button
                android:id="@+id/btn_chart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:onClick="onClick"
                android:text="饼图2" />


            <Button
                android:id="@+id/btn_direct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:onClick="onClick"
                android:text="直播间送爱心" />


            <Button
                android:id="@+id/btn_praise"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:onClick="onClick"
                android:text="直播间点赞"
                android:textAllCaps="false"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_toutiao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:onClick="onClick"
                android:text="模仿今日头条点赞"
                android:textAllCaps="false"
                android:textSize="16sp" />

            <Button
                android:id="@+id/cv_firefly"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="16dp"
                android:onClick="onClick"
                android:text="仿摩拜单车贴纸动画效果"
                android:textAllCaps="false"
                android:textSize="16sp" />

            <Button
                android:id="@+id/firefly"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="16dp"
                android:onClick="onClick"
                android:text="浮动粒子"
                android:textAllCaps="false"
                android:textSize="16sp" />

            <Button
                android:id="@+id/cv_rose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="16dp"
                android:onClick="onClick"
                android:text="LOVE 玫瑰"
                android:textAllCaps="false"
                android:textSize="16sp" />

            <com.github.tifezh.kchart.utils.autoText.AutofitTextView
                android:id="@+id/tvFutureName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center|left"
                android:lines="1"
                android:text="111111"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:textColor="#D8DDE3"
                android:textSize="@dimen/f16"
                autofit:minTextSize="@dimen/f8" />



            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="right|center_vertical"
                android:lines="1"
                android:textColor="#000000"
                android:textSize="@dimen/f16"
                app:autoSizeMaxTextSize="@dimen/f16"
                app:autoSizeMinTextSize="@dimen/f10"
                app:autoSizeStepGranularity="1sp"
                app:autoSizeTextType="uniform"/>


        </LinearLayout>

    </ScrollView>


</LinearLayout>