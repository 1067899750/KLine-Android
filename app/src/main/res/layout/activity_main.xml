<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:autofit="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="50dp"
        android:paddingRight="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_loadmore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:onClick="onClick"
                android:text="k线图" />

            <Button
                android:id="@+id/btn_minute"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:onClick="onClick"
                android:text="分时图" />

            <Button
                android:id="@+id/btn_tate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:onClick="onClick"
                android:text="利率" />

            <Button
                android:id="@+id/btn_minute2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:onClick="onClick"
                android:text="月间价差图" />

            <Button
                android:id="@+id/btn_group_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:onClick="onClick"
                android:text="GroupView"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_group_minute_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:onClick="onClick"
                android:text="GroupMinuteView"
                android:textAllCaps="false"
                android:visibility="visible"/>

            <Button
                android:id="@+id/btn_football"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:onClick="onClick"
                android:text="168体育" />

            <Button
                android:id="@+id/btn_shade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:onClick="onClick"
                android:text="下部阴影" />

            <Button
                android:id="@+id/btn_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:onClick="onClick"
                android:text="明细图表" />


            <Button
                android:id="@+id/btn_line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:onClick="onClick"
                android:text="指示线点击和滑动区分" />


            <Button
                android:id="@+id/btn_suspend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:onClick="onClick"
                android:text="饼图1" />

            <Button
                android:id="@+id/btn_chart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:onClick="onClick"
                android:text="饼图2" />

            <com.github.tifezh.kchart.utils.autoText.AutofitTextView
                android:id="@+id/tvFutureName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center|left"
                android:lines="1"
                android:text="111111"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:textColor="#D8DDE3"
                android:textSize="@dimen/f16"
                autofit:minTextSize="@dimen/f8" />



            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="right|center_vertical"
                android:lines="1"
                android:textColor="#000000"
                android:textSize="@dimen/f16"
                app:autoSizeMaxTextSize="@dimen/f16"
                app:autoSizeMinTextSize="@dimen/f10"
                app:autoSizeStepGranularity="1sp"
                app:autoSizeTextType="uniform"/>


        </LinearLayout>

    </ScrollView>


</LinearLayout>