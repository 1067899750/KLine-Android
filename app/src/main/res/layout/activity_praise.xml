<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.PraiseActivity">

    <com.github.tifezh.kchartlib.toutiao.PraiseRelativeLayout
        android:id="@+id/praise_rl"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/d100"
        android:layout_marginRight="@dimen/d50">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_praise" />
    </com.github.tifezh.kchartlib.toutiao.PraiseRelativeLayout>

</RelativeLayout>